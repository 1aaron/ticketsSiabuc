<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/u_txtNombre"
        android:text="AarÃ³n Negrete Caudillo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/u_txtEmail"
        android:text="anegrete@ucol.mx"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/u_txtDependencia"
        android:text="Biblioteca ciencias de la educacion"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/u_txtRol"
        android:textStyle="italic"
        android:text="Usuario normal"/>
</LinearLayout>
</android.support.v7.widget.CardView>