<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aaron.integradorsiabuc.ActivityPrincipal">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity_principal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/content_main"/>

    <!--android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/background"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_ticket_new" /-->

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menuFab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        fab:fab_labelsPosition="left"
        fab:fab_labelStyle="@style/Etiquetas"
        app:fab_addButtonColorNormal="?attr/colorPrimary"
        app:fab_expandDirection="up">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            fab:fab_title="Transferir"
            fab:fab_size="mini"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            app:fab_icon="@drawable/ic_transfer"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAsignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            fab:fab_title="Asignar"
            fab:fab_size="mini"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            app:fab_icon="@drawable/ic_assign"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Cerrar"
            android:visibility="gone"
            fab:fab_size="mini"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            app:fab_icon="@drawable/ic_close" />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabComentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Comentario nuevo"
            android:visibility="gone"
            fab:fab_size="mini"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            app:fab_icon="@drawable/ic_comment" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Nuevo Ticket"
            fab:fab_size="mini"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            app:fab_icon="@drawable/ic_ticket_new"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>
